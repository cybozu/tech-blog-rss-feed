{
  "compilerOptions": {
    "strict": true,
    "target": "es2021",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "lib": [
      "dom",
      "esnext"
    ],
    "types": [
      "node",
      "vitest/globals",
      "open-graph-scraper"
    ],
    "allowJs": true,
    "noImplicitAny": true,
    "removeComments": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "noEmit": true,
    "outDir": "./dist"
  },
  "include": [
    "src/**/*",
    "tests/**/*",
    "vitest.config.ts",
    "eleventy.config.ts",
  ],
  "exclude": [
    "src/site/_data/**/*",
    "src/common/**/*.js"
  ]
}
